

<% action_url = cat.persisted? ? cat_url(cat) : cats_url %>

<form action="<%= action_url %>" method="post">
  <input type="hidden"
         name="authenticity_token"
         value="<%= form_authenticity_token %>">
	<% if action == :edit %>
		<input type="hidden" name="_method" value="put">
		<% end%>
	<label for="cat_name">Name</label>
	<input type="text" name="cat[name]" id="cat_name" value="<%= @cat.name %>"><br>
	<label for="cat_age">Age</label>
	<input type="text" name="cat[age]" id="cat_age" value="<%= @cat.age %>"><br>
	<label for="cat_sex">Sex</label>
	<label for="cat_sex_male">Male</label>
	<input type="radio" name="cat[sex]" id="cat_sex_male" value="M" <%= "checked" if @cat.sex == "M" %>>
	<label for="cat_sex_male">Female</label>
	<input type="radio" name="cat[sex]" id="cat_sex_female" value="F" <%= "checked" if @cat.sex == "F" %>><br>
	<label for="cat_color">Color</label>
	<select name="cat[color]" id="cat_color">
		<option value=""> </option>
		<option value="black" <%= "selected" if @cat.color == "black" %>>Black</option>
		<option value="brown" <%= "selected" if @cat.color == "brown" %>>Brown</option>
		<option value="white" <%= "selected" if @cat.color == "white" %>>White</option>
		<option value="orange" <%= "selected" if @cat.color == "orange" %>>Orange</option>
	</select><br>
	<label for="cat_birth_date">Birthdate</label>
	<input type="date" name="cat[birth_date]" id="cat_birth_date" value="<%= @cat.birth_date %>"><br>
	<input type="submit" value="Create cat">
</form>